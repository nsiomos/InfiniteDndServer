                                    <outputDirectory>${resources.rulebook.dnd5e.directory}</outputDirectory>
                                    <outputFileName>09-running.json</outputFileName>
                                </configuration>
                            </execution>
                            <execution>
                                <id>update-rulebook-10-magic-items</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>wget</goal>
                                </goals>
                                <configuration>
                                    <url>${sources.rulebook.dnd5e.baseurl}/10%20magic%20items.json</url>
                                    <outputDirectory>${resources.rulebook.dnd5e.directory}</outputDirectory>
                                    <outputFileName>10-magic-items.json</outputFileName>
                                </configuration>
                            </execution>
                            <execution>
                                <id>update-rulebook-11-monsters</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>wget</goal>
                                </goals>
                                <configuration>
                                    <url>${sources.rulebook.dnd5e.baseurl}/11%20monsters.json</url>
                                    <outputDirectory>${resources.rulebook.dnd5e.directory}</outputDirectory>
                                    <outputFileName>11-monsters.json</outputFileName>
                                </configuration>
                            </execution>
                            <execution>
                                <id>update-rulebook-12-conditions</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>wget</goal>
                                </goals>
                                <configuration>
                                    <url>${sources.rulebook.dnd5e.baseurl}/12%20conditions.json</url>
                                    <outputDirectory>${resources.rulebook.dnd5e.directory}</outputDirectory>
                                    <outputFileName>12-conditions.json</outputFileName>
                                </configuration>
                            </execution>
                            <execution>
                                <id>update-rulebook-13-gods</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>wget</goal>
                                </goals>
                                <configuration>
                                    <url>${sources.rulebook.dnd5e.baseurl}/13%20gods.json</url>
                                    <outputDirectory>${resources.rulebook.dnd5e.directory}</outputDirectory>
                                    <outputFileName>13-gods.json</outputFileName>
                                </configuration>
                            </execution>
                            <execution>
                                <id>update-rulebook-14-planes</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>wget</goal>
                                </goals>
                                <configuration>
                                    <url>${sources.rulebook.dnd5e.baseurl}/14%20planes.json</url>
                                    <outputDirectory>${resources.rulebook.dnd5e.directory}</outputDirectory>
                                    <outputFileName>14-planes.json</outputFileName>
