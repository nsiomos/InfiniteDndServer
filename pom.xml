                            </execution>
                            <execution>
                                <id>update-rulebook-15-creatures</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>wget</goal>
                                </goals>
                                <configuration>
                                    <url>${sources.rulebook.dnd5e.baseurl}/15%20creatures.json</url>
                                    <outputDirectory>${resources.rulebook.dnd5e.directory}</outputDirectory>
                                    <outputFileName>15-creatures.json</outputFileName>
                                </configuration>
                            </execution>
                            <execution>
                                <id>update-rulebook-16-npcs</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>wget</goal>
                                </goals>
                                <configuration>
                                    <url>${sources.rulebook.dnd5e.baseurl}/16%20npcs.json</url>
                                    <outputDirectory>${resources.rulebook.dnd5e.directory}</outputDirectory>
                                    <outputFileName>16-npcs.json</outputFileName>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>

        </plugins>
    </build>


</project>
